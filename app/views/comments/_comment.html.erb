<% unless comment.archived? %>
    <div class="container">
        <div class="card mb-3">
            <div class="card-body">
                <p class="card-text">
                    <strong>Commenter:</strong>
                    <%= comment.commenter %>
                </p>
                <p class="card-text">
                    <strong>Comment:</strong>
                    <%= comment.body %>
                </p>
                <%= link_to "Destroy Comment", [comment.article, comment], 
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-danger" %>
            </div>
        </div>
    </div>
<% end %>

